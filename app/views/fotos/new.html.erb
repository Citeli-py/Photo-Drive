
<style>
  .custom-card-body{
    padding: 20px;
  }

  .custom-container{
    margin-top: 50px;
  }

</style>

<h2 style="text-align: center;"> Adicione uma imagem </h2>

<div class="container custom-container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-body custom-card-body">
          <%= form_with model: @foto, local: true do |form| %>
            <div class="form-group">
              <%= form.file_field :imagem, id: "inputArquivo", class: "form-control", style:"font-size: 15px;"%>
            </div>
            <%= form.submit "Enviar", class: "btn btn-primary", style:"font-size: 15px;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>